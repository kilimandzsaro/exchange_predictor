<%= form_with(resource, as: resource_name, url: session_path(resource_name), html: { role: "form"}) do |form| %>
  <%= render "shared/error_messages" %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">   
      <%= form.label :email %>
      <%= form.text_field :email, id: :user_email, class: "form-control" %>
      
      <%= form.label :password %>
      <%= form.password_field :password, id: :user_password, class: "form-control", autocomplete: "off" %>
      
      <% if devise_mapping.rememberable? %>
        <div class="ol-md-6 col-md-offset-3">
          <%= form.check_box :remember_me %>
          <%= form.label :remember_me %>
        </div>
      <% end %>

      <%= form.submit t(".sign_in", default: "Log in"), class: "btn btn-primary"%>
    </div>
  </div>
<% end %>