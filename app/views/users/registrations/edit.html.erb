<% provide(:title) %>

<div class="center jumbotron">
  <h1>
    Sign Up
  </h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "shared/error_messages" %>

  <div class="col-md-6 col-md-offset-3">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name, class: "form-control" %>
    
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email, class: "form-control" %>
    
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password, class: "form-control" %>
    
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation, 
        class: "form-control" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
